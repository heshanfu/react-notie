{
    "name": "react-notie",
    "version": "2.0.0-alpha.1",
    "description": "Simple notification, input and selection suite for react",
    "main": "lib/index.js",
    "module": "esm/index.js",
    "typings": "src/index.d.ts",
    "scripts": {
        "test": "jest --no-cache",
        "coverage": "jest --no-cache --coverage",
        "build": "npm run build:esm && npm run build:cjs && npm run build:esnext",
        "start": "node examples/server.js",
        "build:esm": "rimraf ./esm && tsc --target es5 --module es6 --lib es2015,dom --outDir ./esm",
        "build:cjs": "rimraf ./lib && tsc --target es5 --module commonjs --lib es2015,dom --outDir ./lib",
        "build:esnext": "rimraf ./esnext && tsc --target es6 --module es6 --outDir ./esnext",
        "prepublishOnly": "npm test && npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vkbansal/react-notie.git"
    },
    "files": [
        "esm",
        "esnext",
        "lib"
    ],
    "keywords": [
        "react",
        "reactjs",
        "react-component",
        "notification",
        "confirm",
        "alert",
        "toast",
        "notify"
    ],
    "author": "Vivek Kumar Bansal <contact@vkbansal.me>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/vkbansal/react-notie/issues"
    },
    "homepage": "https://github.com/vkbansal/react-notie#readme",
    "dependencies": {
        "classnames": "^2.2.5"
    },
    "peerDependencies": {
        "react": "^16.0.0",
        "react-dom": "^16.0.0",
        "glamor": "^2.20.0",
        "glamorous": "^4.11.0"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.3",
        "@types/enzyme": "^3.1.6",
        "@types/jest": "^22.0.1",
        "@types/react": "^16.0.34",
        "@types/react-dom": "^16.0.3",
        "babel-minify-webpack-plugin": "^0.2.0",
        "compression-webpack-plugin": "^1.1.3",
        "cross-env": "^5.1.3",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "enzyme-to-json": "^3.3.0",
        "fork-ts-checker-webpack-plugin": "^0.3.0",
        "glamor": "^2.20.40",
        "glamor-loader": "^0.1.0",
        "glamorous": "^4.11.2",
        "html-webpack-plugin": "~2.30.1",
        "jest": "^22.0.5",
        "jest-glamor-react": "^3.2.2",
        "jsdom": "^11.5.1",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-test-renderer": "^16.2.0",
        "rimraf": "~2.6.1",
        "ts-jest": "^22.0.1",
        "ts-loader": "^3.2.0",
        "typescript": "^2.6.2",
        "webpack": "^3.10.0",
        "webpack-dev-server": "^2.10.1"
    },
    "jest": {
        "setupFiles": [
            "<rootDir>/jest.setup.js"
        ],
        "testMatch": [
            "**/?(*.)(spec|test).ts?(x)"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "roots": [
            "<rootDir>/src"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "snapshotSerializers": [
            "enzyme-to-json/serializer",
            "jest-glamor-react"
        ],
        "collectCoverageFrom": [
            "**/*.{ts,tsx}",
            "!**/__tests__/**"
        ],
        "mapCoverage": true
    }
}
